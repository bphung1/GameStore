@model GameStore.WebUI.Models.GameOrderViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>GameOrderViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.DisplayFor(model => model.Customer.FirstName)
                @Html.DisplayFor(model => model.Customer.LastName)
            </div>
            <div class="form-group">
                <td>
                    @Html.DropDownList("GameOrderViewModel", Model.ListOfStores)
                </td>
            </div>

            @Html.HiddenFor(m => Model.CustomerId)
            @Html.HiddenFor(m => Model.OrderID)
            @Html.HiddenFor(m => Model.OrderTime)
            @Html.HiddenFor(m => Model.StoreLocation)

            <div class="form-group">
                <td>
                    @Html.DropDownList("GameOrderViewModel", Model.ListOfGames)
                </td>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
